<section class="vh-100" style="background-color: #eee;">
	<div class="container h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-lg-12 col-xl-11">
				<div class="card text-black" style="border-radius: 25px;">
					<div class="card-body p-md-5">
						<div class="row justify-content-center">
							<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

								<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Créer un compte</p>
								{{ form_errors(form) }}
								<div class="mx-1 mx-md-4">
									{{form_start(form)}}
									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-user fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											{{ form_label(form.nom) }}
											{{ form_widget(form.nom, { attr: { class: 'form-control'} }) }}
											{% if not form.nom.vars.valid %}
												<div class="alert alert-danger p-1 mt-2" role="alert">
													{% for errors in form.nom.vars.errors %}
														{{ (errors.message) }}
													{% endfor %}
												</div>
											{% endif %}
										</div>
									</div>

									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-user fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											{{ form_label(form.prenom) }}
											{{ form_widget(form.prenom, { attr: { class: 'form-control'} }) }}
											{% if not form.prenom.vars.valid %}
												<div class="alert alert-danger p-1 mt-2" role="alert">
													{% for errors in form.prenom.vars.errors %}
														{{ (errors.message) }}
													{% endfor %}
												</div>
											{% endif %}
										</div>
									</div>

									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-user fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											{{ form_label(form.username) }}
											{{ form_widget(form.username, { attr: { class: 'form-control'} }) }}
											{% if not form.username.vars.valid %}
												<div class="alert alert-danger p-1 mt-2" role="alert">
													{% for errors in form.username.vars.errors %}
														{{ (errors.message) }}
													{% endfor %}
												</div>
											{% endif %}
										</div>
									</div>
									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											{{ form_label(form.email) }}
											{{ form_widget(form.email, { attr: { class: 'form-control'} }) }}
											{% if not form.email.vars.valid %}
												<div class="alert alert-danger p-1 mt-2" role="alert">
													{% for errors in form.email.vars.errors %}
														{{ (errors.message) }}
													{% endfor %}
												</div>
											{% endif %}
										</div>
									</div>

									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											{{ form_label(form.plainPassword.first) }}
											{{ form_widget(form.plainPassword.first, { attr: { class: 'form-control'} }) }}
											{% if not form.plainPassword.first.vars.valid %}
												<div class="alert alert-danger p-1 mt-2" role="alert">
													{% for errors in form.plainPassword.first.vars.errors %}
														{{ (errors.message) }}
													{% endfor %}
												</div>
											{% endif %}
										</div>
									</div>

									<div class="d-flex flex-row align-items-center mb-4">
										<i class="fas fa-key fa-lg me-3 fa-fw"></i>
										<div class="form-outline flex-fill mb-0">
											{{ form_label(form.plainPassword.second) }}
											{{ form_widget(form.plainPassword.second, { attr: { class: 'form-control'} }) }}
											{% if not form.plainPassword.second.vars.valid %}
												<div class="alert alert-danger p-1 mt-2" role="alert">
													{% for errors in form.plainPassword.second.vars.errors %}
														{{ (errors.message) }}
													{% endfor %}
												</div>
											{% endif %}
										</div>
									</div>

									<div
										class="form-check d-flex justify-content-center mb-3">
										{# <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" /> #}
										{{form_widget(form.agreeTerms, { attr: { class: 'form-check-input me-2', id: 'form3Example1c' } })}}
										<label class="form-check-label" for="form2Example3">
											J'accépte les
											<a href="#!">conditions d'utilisations</a>
										</label>
									</div>

									<div class="form-check d-flex justify-content-center ">
										<p>Vous avez déja un compte?
											<a href="{{path('app_login')}}">connectez-vous</a>
										</p>
									</div>
									<div class="d-flex justify-content-center mb-3 mb-lg-4 ">
										<button type="submit" class="btn btn-primary btn-lg w-75">Enregistrer</button>
									</div>
									{{form_end(form)}}
								</div>

							</div>
							<div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

								<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
