<div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-white" style="width: 280px;">
	<!--Liste des participants -->
	<div class="list-group list-group-flush border-bottom scrollarea">

		<a href="#" class="d-flex align-items-center flex-shrink-0 p-3 link-dark text-decoration-none border-bottom">
			<svg class="bi me-2" width="30" height="24"><use xlink:href="#bootstrap"/></svg>
			<span class="fs-5 fw-semibold">Les participants</span>
		</a>

		{% for participant in participants %}
				{% if participant.participantUsername == app.user.username %}
					<a href="{{path("app_profile")}}" class="list-group-item list-group-item-action py-3 lh-tight">
						<div class="d-flex w-100 align-items-center justify-content-between">
							<strong class="mb-1">{{participant.participantUsername}} </strong>
						</div>       
					</a>
				{% else %}
					<a href="{{path("app_show_profile", {username : participant.participantUsername })}}" class="list-group-item list-group-item-action py-3 lh-tight">
						<div class="d-flex w-100 align-items-center justify-content-between">
							<strong class="mb-1">{{participant.participantUsername}} </strong>
						</div>       
					</a>

				{% endif %}

		{% endfor %}


	</div>
</div>
