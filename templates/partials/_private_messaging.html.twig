<section >
	<div class="container py-5"> 

		<div class="row">
            {# Partie gauche #}
			<div class="col-md-6 col-lg-5 col-xl-4 mb-4 mb-md-0">

			    <h1 class="font-weight-bold mb-3 text-center text-lg-start">Messages</h1>
               {# On affiche ici les membres avec qui l'utilisateur a un tchat #}
                {% for member in members %}
                    <div class="card">
					    <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li class="p-2 border-bottom" style="background-color: #eee;">
                                {# On ne veut pas que l'utilisateur tchat avec lui m√©me donc on teste et ion met l'utilisateur #}
                                {% if app.user.username == member.username %}
                                    <a href="{{path('send_private_message', {username : member.otherUsername})}}" class="d-flex justify-content-between">
                                
                                    
                                        <div class="d-flex flex-row">
                                            <img src="{{asset('images/pas_de_photo.png')}}" alt="avatar" class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60">
                                            <div class="pt-1">
                                                <p class="fw-bold mb-0">{{member.otherUsername}}</p>
                                                <p class="small text-muted">{{member.lastMessage}}</p>
                                            </div>
                                        </div>
                                        <div class="pt-1">
                                            <p class="small text-muted mb-1">{{member.updatedAt|format_datetime('none', 'short', locale='fr') }}</p>
                                            
                                            {# <span class="badge bg-danger float-end">1</span> #}

                                        </div>
                                    </a>
                                    {% else %}
                                        <a href="{{path('send_private_message', {username : member.username})}}" class="d-flex justify-content-between">
                                            <div class="d-flex flex-row">
                                                <img src="{{asset('images/pas_de_photo.png')}}" alt="avatar" class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60">
                                                <div class="pt-1">
                                                    <p class="fw-bold mb-0">{{member.username}}</p>
                                                    <p class="small text-muted">{{member.lastMessage}}</p>
                                                </div>
                                            </div>
                                            <div class="pt-1">
                                                <p class="small text-muted mb-1">{{member.updatedAt|format_datetime('none', 'short', locale='fr') }}</p>
                                                {# <span class="badge bg-danger float-end">1</span> #}
                                            </div>
                                        </a>
                    
                                    {% endif %}
                                </li>		
                            </ul>
					    </div>
				    </div>   
                {% endfor %}
				
			</div>
            {# Fin partie gauche #}
        </div>
	</div>
</section>
