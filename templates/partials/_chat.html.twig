




<div class="" id="chat2">
  <div class="card-header d-flex justify-content-between align-items-center p-3" >
    <h5 class="mb-0">Chat</h5>
  </div>

  <div class="card-body overflow-auto " id="chat-scroll-el"  style="position: relative; height: 500px">  

    <div class="d-flex flex-row justify-content-start">
      {# <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3-bg.webp" alt="avatar 1" style="width: 45px; height: 100%;"> #}

      <!--On affiche les messages de l"événement et la date de l'envoie-->
      <div>
        {% for message in messages %}
          
          <p class="small ms-3 mb-3 rounded-3 text-muted">{{ message.createdAt|date("m/d/Y  H:i:s") }}</p>
          <p class="small p-2 ms-3 mb-1 rounded-3" style="background-color: #f5f6f7;">{{message.content}}</p>

        {% endfor %}
       
        {# <p class="small p-2 ms-3 mb-1 rounded-3" style="background-color: #f5f6f7;">How are you ...???
        </p>
        <p class="small p-2 ms-3 mb-1 rounded-3" style="background-color: #f5f6f7;">What are you doing
                            tomorrow? Can we come up a bar?</p>
        <p class="small ms-3 mb-3 rounded-3 text-muted">23:58</p> #}
      </div>
    </div>

    {# <div class="divider d-flex align-items-center mb-4">
      <p class="text-center mx-3 mb-0" style="color: #a2aab7;">Today</p>
    </div> #}

  </div>
  <div class="row">
      {{form_start(form)}}
      {# <input type="text" class="form-control form-control-lg" id="exampleFormControlInput1" placeholder="Type message"> #}
          <div class="d-flex p-2">
            {{form_widget(form.content,  { 'value': '' })}}

            <a class="ms-1 text-muted" href="" onclick="this.closest('form').submit();return false;">
              <i class="fas fa-paper-plane"></i>
            </a>
          </div>
      {{form_end(form)}}

    {# <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3-bg.webp" alt="avatar 3" style="width: 40px; height: 100%;"> #}


    {# <a class="ms-3 text-muted" href="#!">
      <i class="fas fa-smile"></i>
    </a> #}
    {# <a class="ms-3" href="#!"> #}
  </div>
</div>


