                                        <a href="#" target="__blank" class="nav-link_">Amis</a>
                                    </li>
                                </ul>
                                <!-- END profile-header-tab -->
                            </div>
                        </div>
                        <!-- end profile --> 
                        </div>
                        <!-- end profile-content -->
                    </div>
                </div>
            </div>
        </div>

	{% else %}
		<a href="{{path("app_login")}}">Connecter vous</a>
		<br>
		<a href="{{path("app_register")}}">Inscrivez vous</a>

	{% endif %}

{% endblock %}
